generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int     @id @default(autoincrement())
  title       String  @unique
  description String
  price       Float
  userId      Int     
  user        User    @relation(fields: [userId], references: [id])
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  products Product[]
}