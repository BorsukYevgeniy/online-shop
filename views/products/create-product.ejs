<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create product</title>
    <link rel="stylesheet" href="/css/products/create-product.css">
  </head>
  <body>
    <%- include('../partials/header.ejs') %>

    <form action="/products/create" method="post" enctype="multipart/form-data" class="create-form">
      <h1>Create product</h1>
      <br>

      <label for="title">Title:</label>
      <input type="text" id="title" name="title" required />

      <label for="price">Price:</label>
      <input type="number" id="price" name="price" required min="0" step="0.01" />

      <label for="description">Description:</label>
      <textarea id="description" name="description" rows="4" required></textarea>

      <label for="category">Categories:</label>
      <select id="categories" name="categoryIds" multiple required size="10">
        <% categories.forEach(c => { %>
          <option value="<%= c.id %>"><%= c.name %></option>
        <% }) %> 
      </select>

      <button id="loadCategories" type="button"> More </button>
      <script src="/js/load-categories.js"></script>

      <label for="images">Product photos:</label>
      <input type="file" name="images" id="images" multiple/>

      <button type="submit">Create</button>
    </form>

  </body>
</html>
